programa {
  funcao inicio() {
        real numero1, numero2, numero3, numero4, soma = 0, divisao

    escreva("Digite o primeiro número: ")
    leia(numero1)
    enquanto(numero1 > 10 ou numero1<0){
      escreva("Digite um número válido!")
      leia(numero1)
    }
    escreva("Digite o segundo número: ")
    leia(numero2)
    enquanto(numero2 > 10 ou numero2<0){
      escreva("Digite um número válido!")
      leia(numero2)
    }
    escreva("Digite o terceiro número: ")
    leia(numero3)
    enquanto(numero3 > 10 ou numero3<0){
      escreva("Digite um número válido!")
      leia(numero3)
    }
    escreva("Digite o quarto número: ")
    leia(numero4)
    enquanto(numero4 > 10 ou numero4<0){
      escreva("Digite um número válido!")
      leia(numero4)
    }

    soma = numero1 + numero2 + numero3 + numero4

    divisao = soma / 4

    se (divisao >= 5){
      escreva("Você passou no teste!")
    } senao {
      escreva("Tente novamente.")
    }


  }
}
