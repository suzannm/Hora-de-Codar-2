programa {
  funcao inicio() {
    real altura, pesoIdeal=0, genero

    escreva("Digite sua altura em metros: ")
    leia(altura)

    escreva("Digite 1 para mulher ou 2 para homem: ")
    leia(genero)

    se (genero == 1){
      pesoIdeal = (62.1 * altura) - 44.7
    } senao{
      pesoIdeal = (72.7 * altura) - 58
    }

    escreva("Seu peso ideal Ã©: ",pesoIdeal," kg")
  }
}
