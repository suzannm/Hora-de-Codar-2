programa {
  funcao inicio() {
    real numero1, numero2, numero3, numero4, maior_numero

    escreva("Digite o primeiro número: ")
    leia(numero1)

    escreva("Digite o segundo número: ")
    leia(numero2)

    escreva("Digite o terceiro número: ")
    leia(numero3)

    escreva("Digite o quarto número: ")
    leia(numero4)

    se (numero1 > numero2 e numero1 > numero3 e numero1 > numero4){
      maior_numero = numero1
    }
    se (numero2 > numero1 e numero2 > numero3 e numero2 > numero4){
      maior_numero = numero2
    }

    se (numero3 > numero2 e numero3 > numero1 e numero3 > numero4){
      maior_numero = numero3
    }

    se (numero4 > numero2 e numero4 > numero3 e numero4 > numero1){
     maior_numero = numero4
    }

    escreva("O primeiro número é o ", numero1 ,", o maior número é o ", maior_numero, ", o último número é o ", numero4)

  }
}
