programa {
  funcao inicio() {
    real numero1

    escreva("Digite um número.")
    leia(numero1)

    se(numero1 > 0){
      escreva("Seu número é positivo.")
    }
    se (numero1 < 0) {
      escreva("Seu número é negativo.")
    }
    se (numero1 == 0) {
      escreva("Seu número é zero")
    }
  }
}
