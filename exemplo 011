programa {
  funcao inicio() {
    inteiro numero1, numero2, operacao, resultado=0

    escreva("Digite o primeiro número: ")
    leia(numero1)

    escreva("Digite o segundo número: ")
    leia(numero2)

    escreva("Escolha a operação aritmetica que deseja usar: 1. Adição, 2. Subtração, 3.Divisão, 4. Multiplicação.")
    leia(operacao)

    se(operacao == 1){
      resultado = numero1 + numero2
    }
    se(operacao == 2){
      resultado = numero1 - numero2
    }
    se(operacao == 3){
      resultado = numero1 / numero2
    }
    se(operacao == 4){
      resultado = numero1 * numero2
    }

    escreva("O resultado da conta é: ", resultado)

  }
}
